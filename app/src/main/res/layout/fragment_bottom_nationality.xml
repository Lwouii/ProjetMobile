<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomNationalityFragment">



    <EditText
        android:gravity="center"
        android:paddingTop="50dp"
        android:id="@+id/nomEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Entrez votre nom"
        android:textColorHint="@color/white"
        />
    <Button
        android:id="@+id/whoButton"
        android:backgroundTint="@color/design_default_color_primary_variant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomEditText"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_centerHorizontal="true"
        android:text="Valider"
        />

    <TextView
        android:id="@+id/natiViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vos Nationnalités"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/whoButton"
        android:layout_marginTop="60dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/natiView"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/natiViewLabel"
        />

    <TextView
        android:id="@+id/genderViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votre  Genre :"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/natiView"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/genderView"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/genderViewLabel"
        />
    <TextView
        android:id="@+id/genderViewFe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="♀"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/natiView"
        android:layout_below="@+id/genderViewLabel"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/genderViewHo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="♂"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/natiView"
        android:layout_below="@+id/genderViewLabel"
        android:visibility="invisible"
        />

</RelativeLayout>