<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomNationalityFragment">


    <EditText
        android:id="@+id/nomEditText"
        android:hint="@string/entrez_votre_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="?android:attr/textColorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:paddingStart="25dp"
        android:maxLines="1"
        android:inputType="text"
        android:background="@drawable/cadre"
        android:drawableEnd="@drawable/baseline_search_24"
        tools:ignore="RtlSymmetry" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/whoButton"
        android:layout_below="@id/nomEditText"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/design_default_color_primary_variant"
        android:text="@string/creer"
        >

    </Button>


    <TextView
        android:id="@+id/nameTextViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/whoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/design_default_color_primary_variant"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/natiViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vos_nationalit_s"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/nameTextViewLabel"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/natiView"
        android:textColor="?android:attr/textColorPrimary"
        android:textColorHint="?android:attr/textColorPrimary"
        android:layout_marginStart="20dp"
        android:hint="@string/oups_il_me_semble_que_votre_pr_nom_soit_un_peu_unique"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/natiViewLabel"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/rounded_corners"
        android:visibility="invisible"

        />

        <TextView
            android:id="@+id/genderViewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/votre_genre"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/natiView"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            />
        <TextView
            android:hint="@string/votre_genre_s_affichera_ici"
            android:id="@+id/genderView"
            android:textColor="?android:attr/textColorPrimary"
            android:textColorHint="?android:attr/textColorPrimary"
            android:layout_marginStart="20dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_below="@+id/genderViewLabel"
            android:background="@drawable/rounded_corners"
            android:visibility="invisible"

            />




</RelativeLayout>