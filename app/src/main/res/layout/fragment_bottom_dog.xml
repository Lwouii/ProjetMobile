<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomDogFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="60dp"
        android:textAlignment="center"
        android:textColorHint="?attr/android:textColorPrimary"
        android:hint="Entrez le nom de votre chien"
        android:id="@+id/dogText"></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dogButton"
        android:layout_below="@id/dogText"
        android:layout_centerHorizontal="true"
        android:textColor="?android:attr/textColorPrimary"
        android:backgroundTint="?attr/android:statusBarColor"
        android:text="CrÃ©er"
        ></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dogButton"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_centerHorizontal="true"
        android:id="@+id/dogName"></TextView>
    <ImageView
        android:id="@+id/dogImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dogName"
        android:scaleType="centerCrop"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>