<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_marginTop="60dp"
            android:id="@+id/pdpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:text="@string/votre_photo"
            android:textStyle="bold"/>

        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baseline_question_mark_24"
            android:contentDescription="@string/profile_image"
            android:layout_marginBottom="10dp"
            app:riv_corner_radius="5dp"/>

        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="@string/nom"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="@string/nom_de_l_utilisateur" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/separationBar"/>

        <TextView
            android:id="@+id/info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:textColor="?android:attr/statusBarColor"
            android:text="@string/informations_personnelles"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/gender_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="16dp"
            android:text="@string/genre"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/maleImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_male"
                android:importantForAccessibility="no" />

            <ImageView
                android:id="@+id/femaleImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_female"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/genderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="?android:attr/textColorPrimary"
                android:text="@string/genre_2"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="@string/date_de_naissance"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="@string/votre_date_de_naissance_est"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_date" />
        <TextView
            android:id="@+id/age_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="16dp"
            android:text="@string/vous_avez"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="@string/votre_ge_est"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_age" />

        <TextView
            android:id="@+id/phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="16dp"
            android:text="@string/num_ro_de_t_l_phone"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="@string/votre_num_ro_de_t_l_phone"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_phone" />

        <TextView
            android:id="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="16dp"
            android:text="@string/email"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="@string/votre_adresse_mail"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_email" />

        <TextView
            android:id="@+id/address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:textColor="?android:attr/statusBarColor"
            android:text="@string/adresse"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/country_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="16dp"
            android:text="@string/pays"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/countryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="@string/votre_pays"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/baseline_flag_24" />

        <TextView
            android:id="@+id/city_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="16dp"
            android:text="@string/ville"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="@string/votre_num_ro_de_t_l_phone_2"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            app:drawableStartCompat="@drawable/ic_city" />
        <TextView
            android:id="@+id/street_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="16dp"
            android:text="@string/rue"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/streetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="@string/votre_rue"
            android:layout_marginStart="16dp"
            android:drawablePadding="8dp"
            android:layout_marginBottom="80dp"
            app:drawableStartCompat="@drawable/ic_street" />

    </LinearLayout>

</ScrollView>